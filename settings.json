{
  "editor.formatOnSave": true,
  "editor.suggest.insertMode": "replace",
  "window.zoomLevel": 3,
  "launch": {},
  "[json]": {},
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "workbench.iconTheme": "material-icon-theme",
  "update.showReleaseNotes": false,
  "zenMode.hideLineNumbers": false,
  "editor.renderLineHighlight": "gutter",
  //"rust-client.rustupPath": "/home/hartmut/.cargo/bin/rustup",

  // "To improve performance": "",
  "extensions.experimental.affinity": {
    "vscodevim.vim": 2
  },
  "vim.leader": "<Space>",
  "vim.hlsearch": false,
  "vim.normalModeKeyBindingsNonRecursive": [
    // { "before": ["<A-u>"], "after": ["<C-u>", "z", "z"] },
    // { "before": ["<A-d>"], "after": ["<C-d>", "z", "z"] },
    { "before": ["<C-u>"], "after": ["<C-u>", "z", "z"] },
    { "before": ["<C-d>"], "after": ["<C-d>", "z", "z"] },

    { "before": ["J"], "after": ["6j"] },
    { "before": ["K"], "after": ["6k"] },

    { "before": ["leader", "w"], "commands": [":w!"] },
    { "before": ["leader", "c"], "commands": ["editor.action.commentLine"] },

    { "before": ["s"], "after": ["leader", "leader", "3", "s"] },

    // { "before": ["Y", "Y"], "commands": [":%y"] },
    { "before": ["<C-a>"], "after": ["g", "g", "V", "G"] },
    { "before": ["Y"], "after": ["y", "$"] },

    // { "before": ["n"], "after": ["b"] },
    // { "before": ["m"], "after": ["w"] },
    // { "before": ["w"], "after": ["n"] },

    // { "before": [";"], "after": ["รถ"] },
    // { "before": ["รถ"], "after": [";"] },
    // change go to end of line ($) to 10 in vim mode
    {
      "before": ["L"],
      "after": ["$"],
      "command": "",
      "when": "editorTextFocus && vim.active && vim.use<C-r> && !inDebugRepl"
    },
    {
      "before": ["d", "L"],
      "after": ["d", "$"],
      "command": "",
      "when": "editorTextFocus && vim.active && vim.use<C-r> && !inDebugRepl"
    },
    {
      "before": ["c", "L"],
      "after": ["c", "$"],
      "command": "",
      "when": "editorTextFocus && vim.active && vim.use<C-r> && !inDebugRepl"
    },
    {
      "before": ["y", "L"],
      "after": ["y", "$"],
      "command": "",
      "when": "editorTextFocus && vim.active && vim.use<C-r> && !inDebugRepl"
    },
    {
      "before": ["v", "L"],
      "after": ["v", "$"],
      "command": "",
      "when": "editorTextFocus && vim.active && vim.use<C-r> && !inDebugRepl"
    },
    // change go to end of line ($) to 10 in vim mode
    {
      "before": ["H"],
      "after": ["_"],
      "command": "",
      "when": "editorTextFocus && vim.active && vim.use<C-r> && !inDebugRepl"
    },
    {
      "before": ["d", "H"],
      "after": ["d", "1"],
      "command": "",
      "when": "editorTextFocus && vim.active && vim.use<C-r> && !inDebugRepl"
    },
    {
      "before": ["c", "H"],
      "after": ["c", "1"],
      "command": "",
      "when": "editorTextFocus && vim.active && vim.use<C-r> && !inDebugRepl"
    },
    {
      "before": ["y", "H"],
      "after": ["y", "1"],
      "command": "",
      "when": "editorTextFocus && vim.active && vim.use<C-r> && !inDebugRepl"
    },
    {
      "before": ["v", "H"],
      "after": ["v", "1"],
      "command": "",
      "when": "editorTextFocus && vim.active && vim.use<C-r> && !inDebugRepl"
    },
    // // FILE TREE
    // {
    //   "before": ["leader", "e"],
    //   "commands": ["workbench.explorer.fileView.focus"]
    // },
    // NAVIGATION
    // switch b/w buffers
    // splits
    { "before": ["leader", "v"], "commands": [":vsplit"] },
    { "before": ["leader", "s"], "commands": [":split"] }

    // panes
    // {
    //   "before": ["<C-h>"],
    //   "commands": ["workbench.action.focusLeftGroup"]
    // },
    // {
    //   "before": ["leader", "j"],
    //   "commands": ["workbench.action.focusBelowGroup"]
    // },
    // {
